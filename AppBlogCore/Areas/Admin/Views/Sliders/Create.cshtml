@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Crear Slider";
}

<br />
<br />

<h3 class="text-center">Crear una nueva Slider</h3>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2  border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">


            <div class="form-group row align-items-center justify-content-center">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del Slider." />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row align-items-center justify-content-center">
                <div class="col-6 ">
                    <label class="col-4">
                        <label asp-for="Estado"></label>
                    </label>
                </div>

                <div class="col-6">
                    <input asp-for="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row align-items-center justify-content-center mt-3">
                <div class="col-6 ">
                    <label class="col-4">
                        <label asp-for="UrlImagen"></label>
                    </label>
                </div>

                <div class="col-6">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">

                <div class="col- align-items-center justify-content-center">
                    <partial name="_VistaCrearVolver" />
                </div>


            </div>
        </div>
    </div>
</form>


@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.tiny.cloud/1/qukxrn62f4bz0iv6z7enaelkkzuzugir28y709xit9xm659s/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: `textarea`,
            plugins: `lists`,
            menubar: `file edit format`

        });
    </script>
}