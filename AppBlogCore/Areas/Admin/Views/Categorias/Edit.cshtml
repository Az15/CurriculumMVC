@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<br />
<br />

<h3 class="text-center">Editar categoria</h3>

<form method="post" asp-action="Edit">
    <div class="row px-2  border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">


            <div class="form-group row align-items-center justify-content-center">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoria." />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row align-items-center justify-content-center">
                <div class="col-6 ">
                    <label class="col-4">
                        <label asp-for="Orden"></label>
                    </label>
                </div>

                <div class="col-6">
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese el Orden de la categoria." />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">

                <div class="col- align-items-center justify-content-center">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a Lista</a>
                </div>

            </div>
        </div>
    </div>
</form>